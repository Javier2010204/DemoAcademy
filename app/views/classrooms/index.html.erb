<p id="notice"><%= notice %></p>

<h1>Classrooms</h1>

<table>
  <thead>
    <tr>
      <th>Days</th>
      <th>Start hour</th>
      <th>End hour</th>
      <th>Start day</th>
      <th>End day</th>
      <th>User</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.days %></td>
        <td><%= classroom.start_hour %></td>
        <td><%= classroom.end_hour %></td>
        <td><%= classroom.start_day %></td>
        <td><%= classroom.end_day %></td>
        <td><%= classroom.user %></td>
        <td><%= classroom.course %></td>
        <td><%= link_to 'Show', classroom %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
        <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

